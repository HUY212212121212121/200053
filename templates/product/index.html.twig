{% extends 'base.html.twig' %}

{% block body %}

        <style>
            table, td, th {
                border: 1px solid #800000;
                text-align: left;
            }

            table {
                border-collapse: collapse;
                width: 100%;
            }

            th, td {
                padding: 15px;
            }
        </style>


    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Category</th>

            </tr>
            </thead>

            <nav class="navbar navbar-expand-sm navbar-dark bg-success">
                <div class="container-fluid">
                    <img src="https://scontent.fsgn5-3.fna.fbcdn.net/v/t1.6435-9/179240500_1099117690582511_1614432114218035177_n.jpg?_nc_cat=104&ccb=1-7&_nc_sid=09cbfe&_nc_ohc=A4QaakulorYAX-6Qefd&_nc_ht=scontent.fsgn5-3.fna&oh=00_AT9Hfwa81SqWfYgWooRugP1TGjzNMIAZoROeg2OElgIbxA&oe=6319C07D" alt="Logo" style="width:40px;" class="rounded-pill">
                    <a class="navbar-brand" href="{{ path('product_list')}} ">Home</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="mynavbar">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <div class="spinner-border text-warning ">Razer</div>
                            </li>
                            <li class="nav-item">
                                <div class="spinner-border text-info">MSI</div>
                            </li>
                            <li class="nav-item">
                                <div class="spinner-border text-danger">Asus</div>
                            </li>
                            <li class="nav-item">
                                <div class="spinner-border text-light">Acer</div>
                            </li>
                            <li class="nav-item">
                                <div class="spinner-border text-info">Dell</div>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-2" type="text" placeholder="Search">
                            <button class="btn btn-warning" type="button">Search</button>
                        </form>
                    </div>
                </div>
            </nav>
            <div class="row">
                {% for category in categories %}

                    <div class="col-1">
                        <a class="btn" style="background: red; color: white; width: 100px" href="{{path('productByCat',{'id':category.id})}}">{{ category.catname }}</a>
                    </div>
                {% endfor %}
            </div>
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel" style="box-sizing: border-box; padding: 0; margin: 0;">
                <div class="carousel-inner" style="max-width: 1200px; margin: 0 auto; padding: 50px 40px;
   width: 100%; position: relative;">
                    <div class="container mt-3">
                        <div class="btn-group btn-group-lg">
                            <button type="button" class="btn btn-primary">Razer</button>
                            <button type="button" class="btn btn-primary">MSI</button>
                            <button type="button" class="btn btn-primary">Asus</button>
                            <button type="button" class="btn btn-primary">Acer</button>
                        </div>
                    <div class="carousel-item">
                        <img src={{ asset ('uploads/image/laptop-gaming-asus-rog-zephyrus-g15-ga503rw-ln100w-3-59d4e2cfd9b242c7b5b39d170def73e4-62f32ec08bf5b.webp') }} class="d-block w-100" style="width: 1200px; height: 500px;" alt="...">

                    </div>
                    <div class="carousel-item active">
                        <img src={{ asset ('uploads/image/1-ee3d9c04376e4dceab0280d1e570e19c-grande-62f32d2fa8603.webp') }} class="d-block w-100" style="width: 1200px; height: 500px;" alt="...">

                    </div>
                    <div class="carousel-item">
                        <img src={{ asset ('uploads/image/razer-blade-15-base-edition-quartz-pink-62f32fa6e5348.jpg') }} class="d-block w-100" style="width: 1200px; height: 500px;" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <tbody>
            {% for category in categories %}

                <tr>
                    <th scope="row">{{ category.id }}</th>
                    <td><a href="{{path('productByCat',{'id':category.id})}} ">{{ category.catname }}</a></td>

                    <td>
                        {#                        <a href="{{ path('todo_details', {'id': product.id}) }} " class='btn btn-success'>View</a>#}
                        {#                        <a href="{{ path('todo_edit', {'id': product.id}) }}" class='btn btn-default'>Edit</a>#}
                        {#                        <a href="{{ path('todo_delete', {'id': product.id}) }}" class='btn btn-danger'>Delete</a>#}
                        <a href="{{path('productByCat',{'id':category.id})}} " class='btn btn-success'>View</a>
                        <a href="#" class='btn btn-default'>Edit</a>
                        <a href="{{ path('product_delete', {'id': category.id}) }} "class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Description</th>
                <th>Date</th>
                <th>Image</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <th scope="row">{{ product.id }}</th>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.date|date('F j,Y, g:i a') }}</td>
                    <td> <a href="{{path('product_details',{'id':product.id})}} " class='btn'><img src="{{ asset('uploads/image/' ~ product.productImage)}}" height="200px" width="300px"></a>
                    <td>
                    <td>
                        {#                        <a href="{{ path('todo_details', {'id': product.id}) }} " class='btn btn-success'>View</a>#}
                        {#                        <a href="{{ path('todo_edit', {'id': product.id}) }}" class='btn btn-default'>Edit</a>#}
                        {#                        <a href="{{ path('todo_delete', {'id': product.id}) }}" class='btn btn-danger'>Delete</a>#}
                        <a href="{{path('product_details',{'id':product.id})}} " class='btn btn-success'>View</a>
                        <a href="{{path('product_edit',{'id':product.id})}} " class='btn btn-default'>Edit</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
